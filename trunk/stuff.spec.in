%define name @PACKAGE_NAME@
%define version @PACKAGE_VERSION@
%define release 1
%undefine _missing_build_ids_terminate_build

Summary: generate artificial catalogs of astronomical sources

Name: %{name}
Version: %{version}
Release: %{release}
Source0: ftp://ftp.iap.fr/pub/from_users/bertin/%{name}/%{name}-%{version}.tar.gz
URL: http://astromatic.net/software/%{name}/
License: GPL v3+
Group: Sciences/Astronomy
BuildRoot: %{_tmppath}/%{name}-buildroot
BuildRequires: pkgconfig

%description
Stuff is a program that generates artificial but realistic catalogs of
astronomical sources.

%prep
%setup -q

%build
if test "$USE_BEST"; then
%configure --enable-icc --enable-auto-flags --enable-best-link
elif test "$USE_ICC"; then
%configure --enable-icc
else
%configure
fi
make %{?_smp_mflags}

%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT

%clean
rm -rf $RPM_BUILD_ROOT

%files
%defattr(-,root,root)
%doc AUTHORS BUGS ChangeLog COPYRIGHT HISTORY INSTALL LICENSE README THANKS
%{_bindir}/@PACKAGE_NAME@
%{_mandir}/man1/@PACKAGE_NAME@.1*
%{_mandir}/manx/@PACKAGE_NAME@.x*
%{_datadir}/@PACKAGE_NAME@

%changelog
* @DATE2@ @PACKAGER@ <@PACKAGE_BUGREPORT@>
- Automatic RPM rebuild

# end of file

